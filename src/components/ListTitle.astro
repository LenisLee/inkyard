---
// @ts-ignore
import {getIconByType,IconOption} from './options.ts'
const {type,title} = Astro.props;
const icons:IconOption  = getIconByType(type) ?? {beforeIcon:'',afterIcon:'',alt:'',type:''}
const {beforeIcon,afterIcon,alt} = icons;
---
<h3>
    <img alt={alt} src={beforeIcon}/>
    {title}
    {afterIcon && <img alt={alt} src={afterIcon}/>}
</h3>
<style lang="scss">
  h3 {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 5px;
    margin: 0 auto;
    width: fit-content;

    img {
      width: 35px;
      height: 35px;
    }
  }

</style>