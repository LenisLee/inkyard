---
const {url,title,description} = Astro.props;
---
<a href={url} class="blog">
    <div class="card">
        <h3>{title}</h3>
        <p>{description}</p>
    </div>
</a>
<style lang="scss">
  .blog{
    text-decoration: none;
    color: inherit;
    display: block;
  }
  .card {
    box-sizing: border-box;
    width: 300px;
    height: 180px;
    padding: 1.5em;
    border-radius: 10px;
    box-shadow: 0 0 20px rgba(0, 0, 0, 0.15);
    cursor: pointer;
  }

  .card:hover {
    transform: scale(1.2);
  }
</style>